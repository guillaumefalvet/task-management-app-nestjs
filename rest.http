@port = {{$dotenv PORT}}
@host = {{$dotenv HOST}}
@protocol = {{$dotenv HTTP_PROTOCOL}}
@endpoint = {{protocol}}://{{host}}:{{port}}
@accessToken = {{login.response.body.accessToken}}
@refreshToken = {{login.response.body.refreshToken}}
@id = {{createTask.response.body.id}}

